<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
	<persistence-unit name="hu.mta.sztaki.lpds.entice.virtualimagemanager.jpa" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<non-jta-data-source>java:comp/env/jdbc/myconnection</non-jta-data-source>
    	
    	<class>hu.mta.sztaki.lpds.entice.virtualimagemanager.database.Image</class>
    	<class>hu.mta.sztaki.lpds.entice.virtualimagemanager.database.Edge</class>
       	
		<properties>
		    <property name="hibernate.connection.datasource" value="java:comp/env/jdbc/myconnection"/>
		    <property name="hibernate.id.new_generator_mappings" value ="true"/>
	        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
	        <property name="hibernate.archive.autodetection" value="class, hbm"/>
	        <property name="hibernate.hbm2ddl.auto" value="update"/>
	        <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
    	</properties>
    </persistence-unit>
</persistence>